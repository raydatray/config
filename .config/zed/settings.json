{
  "preferred_line_length": 100,
  "allow_rewrap": "anywhere",
  "soft_wrap": "preferred_line_length",
  "buffer_line_height": "comfortable",
  "terminal": {
    "dock": "right"
  },
  "agent_servers": {
    "opencode": {
      "type": "registry"
    }
  },
  "agent": {
    "default_profile": "write",
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-opus-4.5"
    }
  },
  "minimap": {
    "show": "never"
  },
  "inlay_hints": {
    "enabled": true,
    "show_value_hints": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "show_background": false,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50,
    "toggle_on_modifiers_press": {
      "control": false,
      "alt": false,
      "shift": false,
      "platform": false,
      "function": false
    }
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "ui_font_size": 16,
  "buffer_font_size": 14,
  "theme": {
    "mode": "dark",
    "light": "Catppuccin Iced Latte (Blur) [Heavy]",
    "dark": "Catppuccin Mocha (Blur) [Heavy]"
  },
  "project_panel": {
    "indent_size": 10,
    "indent_guides": {
      "show": "always"
    }
  },
  "languages": {
    "Python": { "language_servers": ["ruff", "pyrefly", "!pyright", "!pylsp"] }
  },
  "edit_predictions": {
    "mode": "subtle"
  }
}

